<Window x:Class="ReservationTable_PK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReservationTable_PK"
        mc:Ignorable="d"
        Title="Reservations" Height="558.4" Width="848.4" Background="#FFFFDDAF" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas Background="Tan" x:Name="can_seats" Width="496" Height="496" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,9.6">
        </Canvas>
        <Label FontSize="14" x:Name="lbl_reserveFor" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"  Content="Reservation for:" Canvas.Left="507" Canvas.Top="40" Margin="523,17,171.6,473.8"/>
        <Button FontSize="16" x:Name="btn_reserve" Content="Reserve seat(s)" HorizontalAlignment="Left" Margin="675,60,0,0" VerticalAlignment="Top" Width="151" Height="38" Click="btn_reserve_Click"/>
        <Button FontSize="16" x:Name="btn_Update" Content="Update table" HorizontalAlignment="Left" Margin="675,145,0,0" VerticalAlignment="Top" Width="151" Height="38" Click="btn_Update_Click" RenderTransformOrigin="0.625,-0.372"/>
        <Button FontSize="16" x:Name="btn_DeleteSelected" Content="Delete Selected" HorizontalAlignment="Left" Margin="523,188,0,0" VerticalAlignment="Top" Width="147" Height="38" Click="btn_DeleteSelected_Click"/>
        <Button FontSize="16" x:Name="btn_EditSelected" Content="Edit Selected Seat" HorizontalAlignment="Left" Margin="523,145,0,0" VerticalAlignment="Top" Width="147" Height="38" RenderTransformOrigin="0.584,2.95" Click="btn_EditSelected_Click"/>
        <Button FontSize="16" x:Name="btn_Login" Content="Login" HorizontalAlignment="Left" Margin="675,103,0,0" VerticalAlignment="Top" Width="151" Height="38" Click="btn_Login_Click"/>
        <Button FontSize="16" x:Name="btn_LogOut" Content="Logout" HorizontalAlignment="Left" Margin="523,362,0,0" VerticalAlignment="Top" Width="303" Height="38" Click="btn_LogOut_Click" RenderTransformOrigin="0.403,2.995"/>
        <TextBox x:Name="tb_ReservationName" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Height="38" Margin="675,17,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="151" RenderTransformOrigin="0.772,1.074"/>
        <Button FontSize="16" x:Name="btn_Search" Content="Search/Highlight" HorizontalAlignment="Left" Margin="523,60,0,0" VerticalAlignment="Top" Width="147" Height="38" Click="btn_Search_Click"/>
        <Label FontSize="14" Content="Row:" x:Name="lbl_SeatRow" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="523,276,171.6,214.8"/>
        <Label FontSize="14" Content="Column:" x:Name="lbl_SeatColumn" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="523,319,171.6,171.8"/>
        <TextBox  x:Name="tb_SeatRow" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Height="38" Margin="675,276,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="151" RenderTransformOrigin="0.772,1.074"/>
        <TextBox x:Name="tb_SeatColumn" FontSize="16" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Height="38" Margin="675,319,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="151" RenderTransformOrigin="0.772,1.074"/>
        <Button FontSize="16" x:Name="btn_DeleteByName" Content="Delete by Name" HorizontalAlignment="Left" Margin="523,231,0,0" VerticalAlignment="Top" Width="147" Height="38" Click="btn_DeleteByName_Click" RenderTransformOrigin="0.403,2.995"/>
        <Button FontSize="16" x:Name="btn_ResetInputs" Content="Reset Inputs" HorizontalAlignment="Left" Margin="675,188,0,0" VerticalAlignment="Top" Width="151" Height="38" RenderTransformOrigin="0.625,-0.372" Click="btn_ResetInputs_Click"/>
        <Button FontSize="16" x:Name="btn_EditName" Content="Edit name of seats" HorizontalAlignment="Left" Margin="523,103,0,0" VerticalAlignment="Top" Width="147" Height="38" RenderTransformOrigin="0.584,2.95" Click="btn_EditName_Click"/>

    </Grid>
</Window>
